<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="380dp"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/wallpaper" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/thumbnail"
            android:maxLines="3"
            android:padding="8dp"
            android:textColor="#222"
            android:textSize="22dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignTop="@+id/description"
            android:layout_toEndOf="@+id/description"
            android:layout_toRightOf="@+id/description"
            android:background="#ffffff"
            android:onClick="doSomething"
            android:src="@drawable/minus_circle" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignTop="@+id/imageButton1"
            android:layout_toEndOf="@+id/counter"
            android:layout_toRightOf="@+id/counter"
            android:background="#ffffff"
            android:nestedScrollingEnabled="false"
            android:onClick="doSomething"
            android:src="@drawable/plus_circle" />

        <TextView
            android:id="@+id/description"
            android:layout_width="219dp"
            android:layout_height="66dp"
            android:layout_below="@+id/title"
            android:maxLines="3"
            android:padding="8dp"
            android:textColor="#666"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/counter"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/imageButton2"
            android:layout_alignTop="@+id/imageButton1"
            android:layout_toEndOf="@+id/imageButton1"
            android:layout_toRightOf="@+id/imageButton1"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000000"
            android:textColorHighlight="#FFFFFF"
            android:textIsSelectable="true"
            android:typeface="sans" />

        <TextView
            android:id="@+id/Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/counter"
            android:layout_below="@+id/thumbnail"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/description"
            android:layout_toRightOf="@+id/title"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

    </RelativeLayout>
</android.support.v7.widget.CardView>